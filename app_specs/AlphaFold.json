{
  "id": "AlphaFold",
  "script": "App-AlphaFold.pl",
  "label": "AlphaFoldV2",
  "description": "AlphaFold predicts a protein's 3D structure from its amino acid sequence using deep learning",
  "default_memory": "64G",
  "default_cpu": 8,
  "default_gpu": 4,
  "default_runtime": 7200,
  "parameters": [
    {
      "id" : "output_path",
      "label" : "Workspace Output Path",
      "type" : "wsid",
      "desc" : "Path to the workspace",
      "required" : 1,
    },
    {
      "id": "fasta_paths",
      "label": "FASTA Paths",
      "type": "string", 
      "desc": "FASTA file containing protein sequence(s) to predict",
      "required": 1,
      "default": "/input/test_199aa_fixed.fasta"
    },
    {
      "id": "output_dir",
      "label": "Output Directory",
      "type": "string",
      "desc": "Output directory for prediction results",
      "required": 1,
      "default": "/output"
    },
    {
      "id": "model_preset",
      "label": "Model Preset",
      "type": "enum",
      "desc": "Choose the AlphaFold model configuration",
      "required": 1,
      "default": "monomer",
      "enum": [
        "monomer",
        "monomer_ptm",
        "monomer_casp14",
        "multimer"
      ]
    },
    {
      "id": "data_dir",
      "label": "Data Directory",
      "type": "string",
      "desc": "Path to AlphaFold databases",
      "required": 1,
      "default": "/databases"
    },
    {
      "id": "db_preset",
      "label": "Database Preset",
      "type": "enum",
      "desc": "Choose database configuration",
      "required": 1,
      "default": "reduced_dbs",
      "enum": [
        "full_dbs",
        "reduced_dbs"
      ]
    }
  ]
}